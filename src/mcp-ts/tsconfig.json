{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./",
        "declaration": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "mcp-server.ts"
    ],
    "exclude": [
        "node_modules",
        "src"
    ]
}