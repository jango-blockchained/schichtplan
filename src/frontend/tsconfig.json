{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext", // Reverted to ESNext
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node", // Changed to node
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true, // Added this line
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}