{
  "name": "schichtplan-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "bun": ">=1.0.0"
  },
  "trustedDependencies": [
    "bun-types"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "preview": "vite preview",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "c8 bun test",
    "test:e2e": "playwright test",
    "test:e2e:coverage": "c8 playwright test",
    "test:all": "bun run test:coverage && bun run test:e2e:coverage",
    "format": "bunx --bun prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "format:check": "bunx --bun prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "typecheck": "bunx --bun tsc --noEmit",
    "clean": "rm -rf dist node_modules/.vite",
    "start": "bunx --bun vite",
    "analyze": "bunx --bun vite-bundle-visualizer",
    "update-deps": "bun update --latest",
    "check-deps": "bunx --bun npm-check-updates",
    "install:clean": "rm -rf node_modules && bun install",
    "serve:prod": "bun build && bunx --bun serve dist",
    "check": "bun run typecheck && bun run lint && bun run format:check",
    "fix": "bun run lint:fix && bun run format",
    "prepare": "echo \"Skipping build during prepare. Run 'bun run build' manually to build the project.\"",
    "build:skip-typecheck": "bunx --bun vite build",
    "ci": "bun run clean && bun install && bun run check && bun run test && bun run build",
    "bundle:analyze": "bunx --bun vite build --mode analyze",
    "dev:host": "bunx --bun vite --host",
    "dev:debug": "bunx --bun vite --debug",
    "build:prod": "bunx --bun tsc && bunx --bun vite build --mode production",
    "build:staging": "bunx --bun tsc && bunx --bun vite build --mode staging",
    "postinstall": "echo \"Skipping TypeScript checks during installation. Run 'bun run typecheck' manually to check types.\"",
    "typecheck:ci": "bunx --bun tsc --noEmit",
    "precommit": "bun run lint && bun run test",
    "cache:clear": "rm -rf node_modules/.cache",
    "bun:upgrade": "bun upgrade",
    "bun:install": "bun install",
    "bun:add": "bun add",
    "bun:remove": "bun remove",
    "bun:update": "bun update",
    "bun:run": "bun run",
    "install:no-hooks": "bun install --no-scripts"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-collapsible": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-hover-card": "^1.1.6",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-primitive": "^2.0.2",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-toggle": "^1.1.2",
    "@radix-ui/react-toggle-group": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@tailwindcss/vite": "^4.0.9",
    "@tanstack/react-query": "^5.18.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^29.5.14",
    "@types/recharts": "^1.8.29",
    "axios": "^1.7.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.323.0",
    "playwright": "^1.51.1",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-colorful": "^5.6.1",
    "react-day-picker": "^9.5.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^5.0.0",
    "react-router-dom": "^7.4.1",
    "recharts": "^2.15.1",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "use-debounce": "^10.0.4",
    "zustand": "^5.0.3",
    "next": "^14.2.25",
    "react-router": "^7.4.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@playwright/test": "^1.51.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/date-fns": "^2.6.3",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.0",
    "@types/react": "^18.2.43",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.17",
    "bun-types": "latest",
    "c8": "^10.1.3",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "happy-dom": "^15.10.2",
    "jsdom": "^26.0.0",
    "msw": "^2.2.1",
    "postcss": "^8.4.33",
    "prettier": "^3.2.5",
    "serve": "^14.2.1",
    "tailwindcss": "^3.4.1",
    "ts-unused-exports": "^11.0.1",
    "typescript": "^5.8.2",
    "vite": "^6.2.4",
    "vite-bundle-visualizer": "^1.0.0"
  }
}